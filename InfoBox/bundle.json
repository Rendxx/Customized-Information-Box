{
  // [path] section
  // used in [bundle] section below with '#' surround (e.g. #path name#)
  "path": {
    "bower_src": "/bower_components",
    "bower_dest": "/lib",

    "js_src": "/src/js",
    "js_dest": "/js",

    "less": "/src/less",
    "css": "/css",

    "test": "/test"
  },

  // [bundle] section
  // used to define files need to be processed by gulp task
  "bundle": {
    "bower": {
      "#bower_dest#/jquery": "#bower_src#/jquery/dist/jquery*.{js,map}"
    },
    "less": {
      "#test#/test": [ "#test#/test.less" ]
    },
    "js": {
      "#js_dest#/InfoBox": [ "#js_src#/InfoBox.js" ]
    }
  }
}
